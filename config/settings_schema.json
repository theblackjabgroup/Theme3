  {
    "name": "Typography",
    "settings": [
      {
        "type": "select",
        "id": "font_family_primary_token",
        "label": "Base font family",
        "options": [
          { "value": "primary", "label": "Primary (font-family-primary)" },
          { "value": "fallback", "label": "Fallback (font-family-fallback)" }
        ],
        "default": "primary"
      },
      {
        "type": "select",
        "id": "body_size_token",
        "label": "Body text size",
        "options": [
          { "value": "body_small", "label": "Small (body-text-small)" },
          { "value": "body_regular", "label": "Regular (body-text-regular)" },
          { "value": "body_large", "label": "Large (body-text-large)" }
        ],
        "default": "body_regular"
      },
      {
        "type": "select",
        "id": "heading_scale_token",
        "label": "Heading scale",
        "options": [
          { "value": "compact", "label": "Compact (smaller tokens)" },
          { "value": "standard", "label": "Standard (h1–h4 tokens)" },
          { "value": "expanded", "label": "Expanded (larger tokens)" }

{{ 'section-blog-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-color: {{ section.settings.bg_color }};
    --eyebrow-color: {{ section.settings.eyebrow_color }};
    --heading-color: {{ section.settings.heading_color }};
    --text-color: {{ section.settings.text_color }};
    --content-max-width: {{ section.settings.content_max_width }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div
  class="section-content-hero section-{{ section.id }}-padding content-hero--{{ section.settings.content_position }}"
  style="{% if section.settings.bg_image != blank %}background-image: url('{{ section.settings.bg_image | image_url: width: 2000 }}'); background-size: cover; background-position: center;{% endif %}"
>
  {%- if section.settings.bg_image != blank -%}
    <div
      class="content-hero__overlay"
      style="background-color: {{ section.settings.overlay_color }}; opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"
    ></div>
  {%- endif -%}
  <div class="content-hero__container content-hero__container--{{ section.settings.text_alignment }}">
    {%- if section.settings.eyebrow != blank -%}
      <div class="content-hero__eyebrow">
        {{ section.settings.eyebrow }}
      </div>
    {%- endif -%}

    {%- if section.settings.heading != blank -%}
      <h2 class="content-hero__heading">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- if section.settings.text != blank -%}
      <div class="content-hero__text">
        {{ section.settings.text | newline_to_br }}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Blog Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "YOUR STORIES"
    },
    {
      "type": "color",
      "id": "eyebrow_color",
      "label": "Eyebrow Color",
      "default": "#ff0000"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SHARE WITH US"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "By sharing your own mental health story, you'll be a huge inspiration to anyone struggling. You can even share your story anonymously - think of it as a virtual coffee with a friend."
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    },
    {
      "type": "header",
      "content": "Settings"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color (Fallback)",
      "default": "#fff5f5"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Image Overlay Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "%",
      "label": "Overlay Opacity",
      "default": 0
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content Position (Desktop)",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 400,
      "max": 1600,
      "step": 50,
      "unit": "px",
      "label": "Content Max Width",
      "default": 800
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Blog Banner"
    }
  ]
}
{% endschema %}

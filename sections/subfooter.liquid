<script src="{{ 'localization-form.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  #shopify-section-{{ section.id }} .subfooter-section {
    --bg-color: {{ section.settings.bg_color }};
    --text-color: {{ section.settings.text_color }};
    --padding-vertical: {{ section.settings.padding_vertical }}px;
    --social-icon-color: {{ section.settings.social_icon_color }};
    --social-icon-size: {{ section.settings.social_icon_size }}px;
    --social-icon-hover-opacity: {{ section.settings.social_icon_hover_opacity }};
    --payment-icon-size: {{ section.settings.payment_icon_size }}px;
  }

  #shopify-section-{{ section.id }} .sf-payment-item svg {
    height: var(--payment-icon-size);
    width: auto;
  }

  #shopify-section-{{ section.id }} .sf-social-link {
    color: var(--social-icon-color);
  }
  #shopify-section-{{ section.id }} .sf-social-link svg,
  #shopify-section-{{ section.id }} .sf-social-link img {
    width: var(--social-icon-size);
    height: var(--social-icon-size);
    object-fit: contain;
  }
  #shopify-section-{{ section.id }} .sf-social-link:hover {
    opacity: var(--social-icon-hover-opacity);
  }
{%- endstyle -%}

<div class="subfooter-section">
  <div class="subfooter-container">
    <!-- LEFT: Country/Currency Selector -->
    <div class="subfooter-left">
      {%- if section.settings.show_currency or section.settings.show_language -%}
        <div class="no-js-hidden localization-form__wrapper">
          {%- if section.settings.show_currency -%}
            <localization-form>
              {%- form 'localization', id: 'SubfooterCountryForm', class: 'localization-form' -%}
                <div class="no-js-hidden">
                  {%- render 'country-localization', localPosition: 'SubfooterCountry' -%}
                </div>
              {%- endform -%}
            </localization-form>
          {%- endif -%}

          {%- if section.settings.show_language -%}

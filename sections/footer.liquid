{% schema %}
{
  "name": "Footer",
  "enabled_on": {
    "groups": ["footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Join Brandname World below, say “hi” <a href=\"#\">@brandname</a>, or <a href=\"#\">drop us an email</a>.</p>"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show Newsletter",
      "default": true
    },
    {
      "type": "text",
      "id": "email_placeholder",
      "label": "Email Placeholder",
      "default": "Enter email"
    },
    {
      "type": "header",
      "content": "Links"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "links_heading",
      "label": "Links Heading",
      "default": "Also →"
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Bottom Logo Image"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "Logo Width",
      "default": 100
    },
    {
      "type": "select",
      "id": "logo_alignment",
      "label": "Logo Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ],
      "default": "center"
    },
    {
      "type": "header",
      "content": "Design"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "input_border_radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Input Border Radius",
      "default": 20
    },
    {
      "type": "header",
      "content": "Desktop Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 20,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Top Padding (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 20,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding (Desktop)",
      "default": 40
    },
    {
      "type": "range",
      "id": "logo_spacing_top",
      "min": 0,
      "max": 150,
      "step": 5,
      "unit": "px",
      "label": "Space above logo (Desktop)",
      "default": 40
    },
    {
      "type": "header",
      "content": "Mobile Spacing"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 10,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Top Padding (Mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 10,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Bottom Padding (Mobile)",
      "default": 40
    },
    {
      "type": "range",
      "id": "logo_spacing_top_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Space above logo (Mobile)",
      "default": 40
    }
  ]
}
{% endschema %}

{{ 'section-footer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} {
    --bg-color: {{ section.settings.bg_color }};
    --accent-color: {{ section.settings.accent_color }};
    --padding-top: {{ section.settings.padding_top }}px;
    --padding-bottom: {{ section.settings.padding_bottom }}px;
    --logo-spacing-top: {{ section.settings.logo_spacing_top }}px;
    --padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --logo-spacing-top-mobile: {{ section.settings.logo_spacing_top_mobile }}px;
    --logo-width: {{ section.settings.logo_width }}%;
    --logo-alignment: {{ section.settings.logo_alignment }};
    --input-border-radius: {{ section.settings.input_border_radius }}px;
  }
{%- endstyle -%}

<script src="{{ 'section-footer.js' | asset_url }}" defer="defer"></script>

<div class="editorial-footer-section">
  <div class="ef-container">
    <!-- PART 1: CONTENT -->
    <div class="ef-grid">
      <!-- LEFT -->
      <div class="ef-left-col">
        {%- if section.settings.heading != blank -%}
          <div class="ef-heading-area">
            {{ section.settings.heading }}
          </div>
        {%- endif -%}

        {%- if section.settings.show_newsletter -%}
          <div class="ef-form-wrapper">
            {% form 'customer', id: 'EditorialFooterNewsletter', class: 'ef-newsletter-form' %}
              <input type="hidden" name="contact[tags]" value="newsletter">

              <div class="ef-form-inner">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="ef-input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  placeholder="{{ section.settings.email_placeholder }}"
                  required
                >
                <button type="submit" class="ef-submit" name="commit" aria-label="Subscribe">
                  <svg
                    viewBox="0 0 14 10"
                    fill="none"
                    aria-hidden="true"
                    focusable="false"
                    role="presentation"
                    class="icon icon-arrow"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M8.537.808a.5.5 0 01.817-.162l4 4a.5.5 0 010 .708l-4 4a.5.5 0 11-.708-.708L11.793 5.5H1a.5.5 0 010-1h10.793L8.646 1.354a.5.5 0 01-.109-.546z" fill="currentColor"/>
                  </svg>
                </button>
              </div>

              {%- if form.errors -%}
                <div class="ef-message ef-message--error">
                  {{ form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email }}
                </div>
              {%- endif -%}
              {%- if form.posted_successfully? -%}
                <div class="ef-message ef-message--success" tabindex="-1" autofocus>Thanks for subscribing!</div>
              {%- endif -%}
            {% endform %}
          </div>
        {%- endif -%}
      </div>

      <!-- RIGHT -->
      <div class="ef-links-col">
        {%- if section.settings.links_heading != blank -%}
          <div class="ef-links-title">{{ section.settings.links_heading }}</div>
        {%- endif -%}

        <ul class="ef-links-list">
          {%- for link in linklists[section.settings.menu].links -%}
            <li class="ef-link-item">
              <a href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {%- endfor -%}
        </ul>
      </div>
    </div>

    <!-- PART 2: LOGO -->
    <div class="ef-logo-container" data-align="{{ section.settings.logo_alignment }}">
      {%- if section.settings.logo_image != blank -%}
        {{
          section.settings.logo_image
          | image_url: width: 3000
          | image_tag: class: 'ef-logo-img', loading: 'lazy', widths: '600, 1200, 2000, 3000'
        }}
      {%- else -%}
        <img
          src="{{ 'editorial-footer-logo.svg' | asset_url }}"
          alt="Brand Logo"
          class="ef-logo-img"
          width="1149"
          height="357"
          loading="lazy"
        >
      {%- endif -%}
    </div>
  </div>
</div>

<!doctype html>
<html class="js" lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="">
    <link rel="canonical" href="{{ canonical_url }}">

    {%- if settings.favicon != blank -%}
      <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
    {%- endif -%}

    {%- unless settings.type_header_font.system? and settings.type_body_font.system? -%}
      <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
    {%- endunless -%}

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Anonymous+Pro:ital,wght@0,400;0,700;1,400;1,700&display=swap"
      rel="stylesheet"
    >

    <title>
      {{ page_title }}
      {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
      {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
      {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
    </title>

    {% if page_description %}
      <meta name="description" content="{{ page_description | escape }}">
    {% endif %}

    {% render 'meta-tags' %}

    <script src="{{ 'constants.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'pubsub.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'global.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'details-disclosure.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'details-modal.js' | asset_url }}" defer="defer"></script>
    <script src="{{ 'search-form.js' | asset_url }}" defer="defer"></script>

    {%- if settings.animations_reveal_on_scroll -%}
      <script src="{{ 'animations.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}

    {{ content_for_header }}

    <style>
      :root {
        /* Essential Static Tokens (Inlined from design-tokens.css) */
        --color-white: #FFFFFF;
        --color-black: #000000;
        --color-red: #FF0000;
        --gap-section: 24px;
        --gap-component: 8px;
        --padding-medium: 16px;
        --padding-large: 24px;
        --h3-size: 18px;
        --body-text-regular: 14px;
        --body-text-small: 12px;
        --body-text-large: 16px;
        --radius-small: 4px;
        --radius-medium: 8px;
        --radius-large: 25px;
        --radius-pill: 9999px;
        --height-button: 48px;
        --border-width-medium: 2px;
        --shadow-elevation-1: 0 1px 3px rgba(0, 0, 0, 0.12), 0 1px 2px rgba(0, 0, 0, 0.24);
        --shadow-elevation-2: 0 3px 6px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
        --shadow-elevation-3: 0 10px 20px rgba(0, 0, 0, 0.19), 0 6px 6px rgba(0, 0, 0, 0.23);

        /* Default Color Scheme (from first scheme) */
        {%- liquid
          assign default_scheme = settings.color_schemes | first
        -%}

        --color-background: {{ default_scheme.settings.background }};
        --color-headings: {{ default_scheme.settings.headings }};
        --color-text: {{ default_scheme.settings.text }};
        --color-links: {{ default_scheme.settings.links }};
        --color-links-hover: {{ default_scheme.settings.links_hover }};
        --color-borders: {{ default_scheme.settings.borders }};
        --color-shadow: {{ default_scheme.settings.shadow }};

        /* Primary Button */
        --color-primary-button-bg: {{ default_scheme.settings.primary_button_bg }};
        --color-primary-button-text: {{ default_scheme.settings.primary_button_text }};
        --color-primary-button-border: {{ default_scheme.settings.primary_button_border }};
        --color-primary-button-hover-bg: {{ default_scheme.settings.primary_button_hover_bg }};
        --color-primary-button-hover-text: {{ default_scheme.settings.primary_button_hover_text }};
        --color-primary-button-hover-border: {{ default_scheme.settings.primary_button_hover_border }};

        /* Secondary Button */
        --color-secondary-button-bg: {{ default_scheme.settings.secondary_button_bg }};
        --color-secondary-button-text: {{ default_scheme.settings.secondary_button_text }};
        --color-secondary-button-border: {{ default_scheme.settings.secondary_button_border }};
        --color-secondary-button-hover-bg: {{ default_scheme.settings.secondary_button_hover_bg }};
        --color-secondary-button-hover-text: {{ default_scheme.settings.secondary_button_hover_text }};
        --color-secondary-button-hover-border: {{ default_scheme.settings.secondary_button_hover_border }};

        /* Inputs */
        --color-input-bg: {{ default_scheme.settings.input_bg }};
        --color-input-text: {{ default_scheme.settings.input_text }};
        --color-input-border: {{ default_scheme.settings.input_border }};
        --color-input-hover-bg: {{ default_scheme.settings.input_hover_bg }};

        /* Variants */
        --color-variant-bg: {{ default_scheme.settings.variant_bg }};
        --color-variant-text: {{ default_scheme.settings.variant_text }};
        --color-variant-border: {{ default_scheme.settings.variant_border }};
        --color-variant-hover-bg: {{ default_scheme.settings.variant_hover_bg }};
        --color-variant-hover-text: {{ default_scheme.settings.variant_hover_text }};
        --color-variant-hover-border: {{ default_scheme.settings.variant_hover_border }};

        /* Selected Variants */
        --color-variant-selected-bg: {{ default_scheme.settings.selected_variant_bg }};
        --color-variant-selected-text: {{ default_scheme.settings.selected_variant_text }};
        --color-variant-selected-border: {{ default_scheme.settings.selected_variant_border }};
        --color-variant-selected-hover-bg: {{ default_scheme.settings.selected_variant_hover_bg }};
        --color-variant-selected-hover-text: {{ default_scheme.settings.selected_variant_hover_text }};
        --color-variant-selected-hover-border: {{ default_scheme.settings.selected_variant_hover_border }};

        /* Accent Colors */
        --color-accent-red: {{ default_scheme.settings.accent_red }};
        --color-accent-pink: {{ default_scheme.settings.accent_pink }};
        --color-accent-off-white: {{ default_scheme.settings.accent_off_white }};
        --color-accent-light-grey: {{ default_scheme.settings.accent_light_grey }};

        /* Font Variables */
        --font-family-primary: 'Anonymous Pro', monospace;
        --font-body-size: 16px;
        --font-body-weight: 400;
        --font-heading-weight: 700;

        /* Spacing Variables */
        --spacing-xs: 4px;
        --spacing-s: 8px;
        --spacing-m: 16px;
        --spacing-l: 24px;
        --spacing-xl: 32px;
        --spacing-xxl: 48px;

        /* Border Radius */
        --border-radius-s: 4px;
        --border-radius-m: 8px;
        --border-radius-l: 16px;
        --border-radius-pill: 100px;
        --icon-size-medium: 20px;
        --border-width-thin: 1px;

        /* Transitions */
        --transition-short: 0.2s ease;
        --transition-medium: 0.3s ease;
        --transition-long: 0.5s ease;
      }

      {%- for scheme in settings.color_schemes -%}
        .color-{{ scheme.id }},
        .color-{{ scheme.id }} p,
        .color-{{ scheme.id }} span,
        .color-{{ scheme.id }} div,
        .color-{{ scheme.id }} a {
          --color-background: {{ scheme.settings.background }};
          --color-headings: {{ scheme.settings.headings }};
          --color-text: {{ scheme.settings.text }};
          --color-links: {{ scheme.settings.links }};
          --color-links-hover: {{ scheme.settings.links_hover }};
          --color-borders: {{ scheme.settings.borders }};
          --color-shadow: {{ scheme.settings.shadow }};

          --color-primary-button-bg: {{ scheme.settings.primary_button_bg }};
          --color-primary-button-text: {{ scheme.settings.primary_button_text }};
          --color-primary-button-border: {{ scheme.settings.primary_button_border }};
          --color-primary-button-hover-bg: {{ scheme.settings.primary_button_hover_bg }};
          --color-primary-button-hover-text: {{ scheme.settings.primary_button_hover_text }};
          --color-primary-button-hover-border: {{ scheme.settings.primary_button_hover_border }};

          --color-secondary-button-bg: {{ scheme.settings.secondary_button_bg }};
          --color-secondary-button-text: {{ scheme.settings.secondary_button_text }};
          --color-secondary-button-border: {{ scheme.settings.secondary_button_border }};
          --color-secondary-button-hover-bg: {{ scheme.settings.secondary_button_hover_bg }};
          --color-secondary-button-hover-text: {{ scheme.settings.secondary_button_hover_text }};
          --color-secondary-button-hover-border: {{ scheme.settings.secondary_button_hover_border }};

          --color-input-bg: {{ scheme.settings.input_bg }};
          --color-input-text: {{ scheme.settings.input_text }};
          --color-input-border: {{ scheme.settings.input_border }};
          --color-input-hover-bg: {{ scheme.settings.input_hover_bg }};

          --color-variant-bg: {{ scheme.settings.variant_bg }};
          --color-variant-text: {{ scheme.settings.variant_text }};
          --color-variant-border: {{ scheme.settings.variant_border }};
          --color-variant-hover-bg: {{ scheme.settings.variant_hover_bg }};
          --color-variant-hover-text: {{ scheme.settings.variant_hover_text }};
          --color-variant-hover-border: {{ scheme.settings.variant_hover_border }};

          --color-variant-selected-bg: {{ scheme.settings.selected_variant_bg }};
          --color-variant-selected-text: {{ scheme.settings.selected_variant_text }};
          --color-variant-selected-border: {{ scheme.settings.selected_variant_border }};
          --color-variant-selected-hover-bg: {{ scheme.settings.selected_variant_hover_bg }};
          --color-variant-selected-hover-text: {{ scheme.settings.selected_variant_hover_text }};
          --color-variant-selected-hover-border: {{ scheme.settings.selected_variant_hover_border }};

          /* Accent Colors */
          --color-accent-red: {{ scheme.settings.accent_red }};
          --color-accent-pink: {{ scheme.settings.accent_pink }};
          --color-accent-off-white: {{ scheme.settings.accent_off_white }};
          --color-accent-light-grey: {{ scheme.settings.accent_light_grey }};

          background-color: var(--color-background);
          color: var(--color-text);
        }
      {%- endfor -%}
    </style>

    {{ 'base.css' | asset_url | stylesheet_tag }}

    {%- if localization.available_countries.size > 1 or localization.available_languages.size > 1 -%}
      {{ 'component-localization-form.css' | asset_url | stylesheet_tag: preload: true }}
      <script src="{{ 'localization-form.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}

    {%- if settings.predictive_search_enabled -%}
      <link
        rel="stylesheet"
        href="{{ 'component-predictive-search.css' | asset_url }}"
        media="print"
        onload="this.media='all'"
      >
    {%- endif -%}

    <script>
      if (Shopify.designMode) {
        document.documentElement.classList.add('shopify-design-mode');
      }
    </script>
  </head>

  <body>
    {%- if settings.cart_type == 'drawer' -%}
      {%- render 'cart-drawer' -%}
    {%- endif -%}

    {% sections 'header-group' %}

    <main id="MainContent" class="content-for-layout focus-none" role="main" tabindex="-1">
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    <ul hidden>
      <li id="a11y-refresh-page-message">{{ 'accessibility.refresh_page' | t }}</li>
      <li id="a11y-new-window-message">{{ 'accessibility.link_messages.new_window' | t }}</li>
    </ul>

    <script>
      window.shopUrl = '{{ request.origin }}';
      window.routes = {
        cart_add_url: '{{ routes.cart_add_url }}',
        cart_change_url: '{{ routes.cart_change_url }}',
        cart_update_url: '{{ routes.cart_update_url }}',
        cart_url: '{{ routes.cart_url }}',
        predictive_search_url: '{{ routes.predictive_search_url }}',
      };

      window.cartStrings = {
        error: `{{ 'sections.cart.cart_error' | t }}`,
        quantityError: `{{ 'sections.cart.cart_quantity_error_html' | t: quantity: '[quantity]' }}`,
      };

      window.variantStrings = {
        addToCart: `{{ 'products.product.add_to_cart' | t }}`,
        soldOut: `{{ 'products.product.sold_out' | t }}`,
        unavailable: `{{ 'products.product.unavailable' | t }}`,
        unavailable_with_option: `{{ 'products.product.value_unavailable' | t: option_value: '[value]' }}`,
      };

      window.quickOrderListStrings = {
        itemsAdded: `{{ 'sections.quick_order_list.items_added.other' | t: quantity: '[quantity]' }}`,
        itemAdded: `{{ 'sections.quick_order_list.items_added.one' | t: quantity: '[quantity]' }}`,
        itemsRemoved: `{{ 'sections.quick_order_list.items_removed.other' | t: quantity: '[quantity]' }}`,
        itemRemoved: `{{ 'sections.quick_order_list.items_removed.one' | t: quantity: '[quantity]' }}`,
        viewCart: `{{- 'sections.quick_order_list.view_cart' | t -}}`,
        each: `{{- 'sections.quick_order_list.each' | t: money: '[money]' }}`,
        min_error: `{{- 'sections.quick_order_list.min_error' | t: min: '[min]' }}`,
        max_error: `{{- 'sections.quick_order_list.max_error' | t: max: '[max]' }}`,
        step_error: `{{- 'sections.quick_order_list.step_error' | t: step: '[step]' }}`,
      };

      window.accessibilityStrings = {
        imageAvailable: `{{ 'products.product.media.image_available' | t: index: '[index]' }}`,
        shareSuccess: `{{ 'general.share.success_message' | t }}`,
        pauseSlideshow: `{{ 'sections.slideshow.pause_slideshow' | t }}`,
        playSlideshow: `{{ 'sections.slideshow.play_slideshow' | t }}`,
        recipientFormExpanded: `{{ 'recipient.form.expanded' | t }}`,
        recipientFormCollapsed: `{{ 'recipient.form.collapsed' | t }}`,
        countrySelectorSearchCount: `{{ 'localization.country_results_count' | t: count: '[count]' }}`,
        languageSelectorSearchCount: `{{ 'localization.language_results_count' | t: count: '[count]' }}`,
      };
    </script>

    {%- if settings.predictive_search_enabled -%}
      <script src="{{ 'predictive-search.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}

    {%- if settings.cart_type == 'drawer' -%}
      <script src="{{ 'cart-drawer.js' | asset_url }}" defer="defer"></script>
    {%- endif -%}
  </body>
</html>
